<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_screen_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--SlidingTabsLayout for navigation between battles and rooms-->
        <com.pokemonshowdown.SlidingTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color_primary"
            android:visibility="gone" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:id="@+id/blurred_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_grey" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/battle_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        fab:fab_addButtonColorNormal="@color/dark_red"
        fab:fab_addButtonColorPressed="@color/light_red"
        fab:fab_addButtonStrokeVisible="true"
        android:layout_marginRight="16dp"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_battle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_battle_icon"
            fab:fab_title="Add a battle" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/watch_battle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            fab:fab_title="Watch a battle" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Challenge" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
